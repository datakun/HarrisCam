<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingback"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llTitleSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/title_settings"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibSettingsClose"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/close" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivTitleCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/title_camera" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />
            <!--
            <LinearLayout
                android:id="@+id/llCameraMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/name_cmode"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibCameraMode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/scale_square" />
            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/llResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/name_res"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibResolution"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/res_mid" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAutoSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/name_save"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibAutoSave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_on" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivTitleHarrisCam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/title_harriscam" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line" />

            <LinearLayout
                android:id="@+id/llAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/name_about"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/name_version"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="@string/app_version"
                    android:textColor="#888888"
                    android:textSize="30dip" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAutoUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/name_update"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/ibAutoUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_on" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>