<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/optionMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/mode_menu_size"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibGuideline"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_guideline_off"/>

        <ImageButton
            android:id="@+id/ibCameraSwitcher"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_switching"/>

        <ImageButton
            android:id="@+id/ibFlashlight"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_flashlight_off"/>

        <ImageButton
            android:id="@+id/ibIntervalWatch"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_watch_05"/>
    </LinearLayout>
</merge>