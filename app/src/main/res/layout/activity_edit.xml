<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff000000">

        <ImageView
            android:id="@+id/ivHarrisResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mode_menu_size"
            android:src="@color/Black"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/option_menu_size"
        android:orientation="horizontal"
        android:background="#ffffffff">
        <ImageButton
            android:id="@+id/ibChangeOrder"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/xml_btn_pictures"/>
        <ImageButton
            android:id="@+id/ibCropImage"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/xml_btn_pictures"/>
        <ImageButton
            android:id="@+id/ibRotateImage"
            android:layout_width="@dimen/option_menu_size"
            android:layout_height="@dimen/option_menu_size"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/xml_btn_pictures"/>
    </LinearLayout>
</FrameLayout>
